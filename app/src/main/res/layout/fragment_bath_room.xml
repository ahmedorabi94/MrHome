<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ahmed.mrhome.BathRoomFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <Switch
                android:id="@+id/switch_light_bathroom"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Light"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                />

            <SeekBar
                android:id="@+id/seekbar_light_bathroom"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:max="100"
                android:progress="1"
                />

            <TextView
                android:id="@+id/tv_light_bathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="0"
                android:layout_marginLeft="13dp"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="336dp"
            android:layout_height="1dip"
            android:background="#c4c4c4"
            />







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Switch
                android:id="@+id/switch_Washer_bathroom"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Washer" />




        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="336dp"
            android:layout_height="1dip"
            android:background="#c4c4c4"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Leakage"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="#161616"
                />

            <ToggleButton
                android:id="@+id/waterLeakage_toggle_bathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="21dp"
                android:textOn="Danger"
                android:textOff="Safe"
                android:background="@drawable/toggle_selector"

                />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="336dp"
            android:layout_height="1dip"
            android:background="#c4c4c4"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="#161616"
                />

            <ToggleButton
                android:id="@+id/fire_toggle_bathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="99dp"
                android:textOn="Danger"
                android:textOff="Safe"
                android:background="@drawable/toggle_selector"

                />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="336dp"
            android:layout_height="1dip"
            android:background="#c4c4c4"
            />





    </LinearLayout>

</ScrollView>






