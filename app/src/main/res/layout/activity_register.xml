<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
     >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_showdata"
            />
    </ScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Register"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#54516d"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/tv_register"
        />

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_username"
        android:hint="Username"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_et"

        />
    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_usermail"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:background="@drawable/my_et"

        />

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_userphone"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:hint="Phone"
        android:background="@drawable/my_et"
        android:inputType="phone"

        />
    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_user_pass"
        android:layout_gravity="center"
        android:padding="10dp"
        android:hint="Password"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_et"
        android:inputType="textPassword"
        />
    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_user_confirmPass"
        android:layout_gravity="center"
        android:padding="10dp"
        android:hint="Confirm Password"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_et"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup"
        android:layout_gravity="center"
        android:text="Sign Up"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_btn"
        />



     </LinearLayout>