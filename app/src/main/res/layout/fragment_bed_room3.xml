<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ededed"
   >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="335dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_border"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:layout_marginLeft="12dp"
            android:weightSum="1">
            <Switch
                android:id="@+id/switch_light_bedroom3"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Light"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />

            <SeekBar
                android:id="@+id/seekbar_light_bedroom3"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:max="100"
                android:progress="1"
                />

            <TextView
                android:id="@+id/tv_light_bedroom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="0"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="335dp"
            android:layout_height="70dp"
            android:background="@drawable/layout_border"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:layout_marginLeft="12dp"
            android:weightSum="1">

            <Switch
                android:id="@+id/switch_temp_bedroom3"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Temp" />

            <SeekBar
                android:id="@+id/seekbar_Temp_bedroom3"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:max="40"
                android:progress="1"
                />

            <TextView
                android:id="@+id/tv_Temp_bedroom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="0"
                android:layout_marginLeft="8dp"
                />

        </LinearLayout>




        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="335dp"
            android:layout_height="70dp"
            android:background="@drawable/layout_border"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:layout_marginLeft="12dp"


            >

            <Switch
                android:id="@+id/switch_tv_bedroom3"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="TV" />

        </FrameLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="335dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_border"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:layout_marginLeft="12dp"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="#161616"
                />

            <ToggleButton
                android:id="@+id/fire_toggle_bedroom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:textOn="Danger"
                android:textOff="Safe"
                android:background="@drawable/toggle_selector"

                />

        </LinearLayout>

    <LinearLayout
        android:layout_height="100dp"
        android:layout_width="335dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:background="@drawable/layout_border"
        android:elevation="2dp"
        android:translationZ="2dp"

        tools:ignore="UnusedAttribute">
        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textSize="22sp"
            android:textColor="#ff0066"
            />

        <TextView
            android:id="@+id/temp_value_bedroom3"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21C"
            android:textSize="25sp"
            android:textColor="#161616"
            />

    </LinearLayout>

    </LinearLayout>




</ScrollView>


